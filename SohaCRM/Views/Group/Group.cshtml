                                    var num_patt = /^[0-9]*$/;
                                    var alphnumeric = /^[a-zA-Z ضصيكثقفغعهخحجچپشسیبلاتنمکگظطزرژءذدئوآ0123456789]*$/;
                                    //console.log(alph_patt.test($('#CustomerConnector').val()));
                                    if ($('#GroupName').val() == "") {
                                        ShowModal("لطفاً فیلد نام گروه را پر کنید")
                                        return false;
                                    }
                                    else if (!alphnumeric.test($('#GroupName').val())) {
                                        ShowModal("فیلد نام گروه حاوی کاراکتر غیرمجاز است")
                                        return false;
                                    }
                                    else if ($('#IsActive_ID').val() == "") {
                                        ShowModal("لطفاً وضعیت را انتخاب کنید")
                                        return false;
                                    }

                                    return true;
                                }

                                function ShowModal(txt) {
                                    $("#modalcontent").html(txt);
                                    $('#myModal').modal();
                                }

                                $('#Btn_Submit').click(function () {

                                    if (!IsFormValid())
                                    {
                                        $('#myModal').modal();
                                        return false;
                                    }
                                    else {
                                        var data1 = $('form').serialize();
                                        $.ajax({
